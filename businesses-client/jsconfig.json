{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "root": ["./*"],
      "screens": ["./screens/*"],
      "components": ["./components/*"],
      "store": ["./store/*"],
      "constants": ["./constants/*"],
      "lib": ["./lib/*"],
      "api": ["./api/*"],
      "contexts": ["./contexts/*"],
      "utils": ["./utils/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
